{
  "app_name": "app-a",
  "description": "Customer Portal Web Application",
  "project_suite": "test-suites/app-a/CustomerPortal.pjs",
  "test_items": {
    "SmokeTests": ["Login", "Navigation", "BasicSearch"],
    "RegressionTests": ["Login", "Navigation", "BasicSearch", "AdvancedSearch", "UserProfile", "Settings"],
    "FullRegression": ["Login", "Navigation", "BasicSearch", "AdvancedSearch", "UserProfile", "Settings", "Checkout", "Payments", "Reports"]
  },
  "environments": {
    "staging": {
      "base_url": "https://staging.customer-portal.example.com",
      "credentials_secret": "APP_A_STAGING_CREDS"
    },
    "production": {
      "base_url": "https://customer-portal.example.com",
      "credentials_secret": "APP_A_PROD_CREDS"
    }
  },
  "timeout_minutes": 30,
  "notifications": {
    "on_failure": ["qa-team@example.com"],
    "on_success": []
  },
  "tags": ["web", "customer-facing"],
  "retry_on_failure": { "enabled": true, "attempts": 2 }
}
