{
  "app_name": "app-b",
  "description": "Internal Admin Dashboard",
  "project_suite": "test-suites/app-b/AdminDashboard.pjs",
  "test_items": {
    "SmokeTests": ["Login", "DashboardLoad", "BasicReports"],
    "RegressionTests": ["Login", "DashboardLoad", "BasicReports", "UserManagement", "AuditLog"],
    "FullRegression": ["Login", "DashboardLoad", "BasicReports", "UserManagement", "AuditLog", "DataExport", "SystemConfig"]
  },
  "environments": {
    "staging": {
      "base_url": "https://staging.admin.example.com",
      "credentials_secret": "APP_B_STAGING_CREDS"
    },
    "production": {
      "base_url": "https://admin.example.com",
      "credentials_secret": "APP_B_PROD_CREDS"
    }
  },
  "timeout_minutes": 45,
  "notifications": {
    "on_failure": ["qa-team@example.com", "admin-team@example.com"],
    "on_success": []
  },
  "tags": ["web", "internal"],
  "retry_on_failure": { "enabled": true, "attempts": 2 }
}
